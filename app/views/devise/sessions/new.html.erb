<div class="max-w-sm mx-auto mt-10">
  <div class="bg-white shadow-md border border-gray-200 rounded-lg max-w-full p-4 sm:p-6 lg:p-8">
    <h3 class="text-xl font-medium text-gray-900">登入</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :username, class:"text-sm font-medium text-gray-900 mb-2" %><br />
        <div class="email_container flex focus:ring-blue-500 focus:border-blue-500 items-center bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg w-full">
            <%= f.text_field :username, autofocus: true, autocomplete: "username", class:" h-11 border-none bg-transparent flex-grow  p-2.5 focus:outline-none"%>
            <p class="mx-2.5 text-base"> @yimails.com </p>
        </div>
      </div>

      <div class="field">
        <%= f.label :password, "密碼", class:"text-sm font-medium text-gray-900 mb-2" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg block w-full p-2.5" %>
      </div>

      <div class="actions">
        <%= f.submit "登入", class:"w-full my-7 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center cursor-pointer" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
