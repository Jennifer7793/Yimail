<div class="bg-white p-8 rounded-md w-5/12 mx-auto">
  <div class=" flex items-center justify-between pb-6">
    <h2 class="text-gray-600 font-semibold">標籤列表</h2>
    <div class="flex">
      <div class="lg:ml-40 ml-10 space-x-8">
        <%= link_to "新增標籤", new_label_path, remote: true, type:"submit", class:"bg-indigo-600 px-4 py-2 rounded-md text-white font-semibold tracking-wide cursor-pointer" %>
      </div>
    </div>  
  </div>
  <div>
  <div class="mx-4 sm:-mx-8 px-4 sm:px-8 py-4 overflow-x-auto">
    <div class="inline-block min-w-full shadow rounded-lg overflow-hidden">
      <table class="min-w-full leading-normal">
        <thead>
          <tr class="border-b-2 border-gray-200 bg-gray-100">
            <th class="px-5 py-3 text-xs font-semibold text-gray-600 uppercase tracking-wider text-center">標籤</th>
            <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-xs font-semibold text-gray-600 uppercase tracking-wider">動作</th>
          </tr>
        </thead>
        <tbody>
          <% @labels_with_order.each do |label| %>
            <tr class="border-b">
              <td class="pl-10 py-5 text-sm"><%= label.display %></td>
              <td class="text-center">
                <%= link_to "移除", label_path(label.id), method: 'delete', data: {confirm: "確定要刪除嗎？ \n歸屬於　\"#{label.hierarchy}\"　下的所有標籤也都會被刪除唷！"}, class:"text-sm transition duration-150 hover:bg-gray-200 bg-gray-300 font-semibold py-2 px-4 rounded-l"%>
                <%= link_to "編輯", edit_label_path(label.id), class:"text-sm transition duration-150 hover:bg-gray-200 bg-gray-300 font-semibold py-2 px-4 rounded-r" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="flex py-4">
        <%= link_to "回收件匣", letters_path, class:"w-32 bg-gray-200 mt-4 py-2 rounded-2xl text-white font-semibold mb-2 text-center mx-28 ml-auto" %>
      </div>
    </div>
  </div>
</div>

<%# new label modal  %>
<div id="labelNewContainer" class="hidden overflow-x-hidden overflow-y-auto fixed inset-0 z-50 outline-none focus:outline-none justify-center items-center backdrop-sepia bg-opacity-60 bg-gray-500">
  <div class="w-4/12 mx-auto mt-10">
    <div class="bg-white shadow-md border border-gray-200 rounded-lg p-4">
      <!--header-->
      <div class="flex items-start justify-between p-5 border-b border-solid border-blueGray-200 rounded-t">
        <h3 class="text-2xl font-semibold">
          新增標籤
        </h3>
        <button id ="closeBtn" class="p-1 ml-auto bg-transparent hover:bg-gray-200 hover:text-gray-900" >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>  
        </button>
      </div>
      <!--body-->
      <div class="relative p-6 flex-auto">
        <div id="labelNew">
        </div>
      </div>
    </div>
  </div>
</div>