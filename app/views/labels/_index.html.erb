<div class="-mx-4 sm:-mx-8 px-4 sm:px-8 py-4 overflow-x-auto">
  <div class="inline-block min-w-full shadow rounded-lg overflow-hidden">
    <table class="min-w-full leading-normal">
      <thead>
        <tr class="border-b-2 border-gray-200 bg-gray-100">
          <th class="px-5 py-3 text-xs font-semibold text-gray-600 uppercase tracking-wider text-center">標籤</th>
          <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-xs font-semibold text-gray-600 uppercase tracking-wider">動作</th>
        </tr>
      </thead>
      <tbody>
        <% @labels_with_order.each do |label| %>
          <tr class="border-b">
            <td class="pl-10 py-5 text-sm"><%= label.display %></td>
            <td class="text-center">
              <%= link_to "移除", label_path(label.id), method: 'delete', data: {confirm: '確認刪除?'}, class:"text-sm transition duration-150 hover:bg-gray-200 bg-gray-300 font-semibold py-2 px-4 rounded-l"%>
              <%= link_to "編輯", edit_label_path(label.id), class:"text-sm transition duration-150 hover:bg-gray-200 bg-gray-300 font-semibold py-2 px-4 rounded-r" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="flex py-4">
      <%= link_to "新增標籤", new_label_path, type:"submit", class:"bg-indigo-600 px-4 py-2 rounded-md text-white font-semibold tracking-wide cursor-pointer mx-16 ml-auto" %>
    </div>
  </div>
</div>